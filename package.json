  "scripts": {
    "dev": "BUILD_TARGET=node vite dev --port 3000",
    "dev:cloudflare": "BUILD_TARGET=cloudflare vite dev --port 3000",
    "build": "pnpm build:cloudflare && pnpm build:node",
    "build:cloudflare": "BUILD_TARGET=cloudflare vite build",
