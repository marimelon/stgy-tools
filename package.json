    "format": "biome format",
    "lint": "biome lint",
    "check": "tsc --noEmit && biome check",
    "deploy": "npm run build:cloudflare && wrangler deploy",
    "deploy:node": "npm run build:node",
    "start": "node .output/server/index.mjs"
